<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/btnGridImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_grid_new"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="8dp"
            />

        <!--
        <ImageView
            android:id="@+id/btnListImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_list"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="4dp"
            />
            -->

        <LinearLayout

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <EditText
                android:id="@+id/searchProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_round_blue"
                android:drawableLeft="@mipmap/ic_kaca_pembesar"
                android:hint="Cari"
                android:drawablePadding="4dp"
                android:textColorHint="@color/gray_highlight"
                android:maxLines="1"
                />

        </LinearLayout>


        <ImageView
            android:id="@+id/btnBarcode"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_barcode_"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_horizontal|center_vertical"
            />


        <ImageButton
            android:id="@+id/btnSpeech"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/ic_mic_white_24dp"
            android:background="@drawable/background_oval_dark"
            android:scaleType="centerInside"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="vertical" />


</LinearLayout>
