<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/blue_salesforce"
    app:theme="@style/ToolbarColorHome"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    >


    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/header_text_size"
        android:text="TEST"
        android:layout_gravity="left|center_horizontal"
        android:textColor="@color/white"/>

    <FrameLayout
        android:id="@+id/frameIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        >


        <ImageView
            android:id="@+id/iconShoping"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_cart_image"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/unreadNotifTextLayout"
            android:minWidth="20dp"
            android:minHeight="20dp"
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingRight="2dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/bg_notif_circle"
            android:visibility="visible"
            />

    </FrameLayout>









</android.support.v7.widget.Toolbar>